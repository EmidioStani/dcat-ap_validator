# Rule_ID:10
# @title [Catalog] dct:publisher should be a resource
# @tag catalog
# @endpoint http://localhost:3030/dcat-ap_validator/query

PREFIX dcat: <http://www.w3.org/ns/dcat#>
PREFIX dct: <http://purl.org/dc/terms/>

SELECT ?Rule_Origin ?Rule_ID ?Rule_Severity ?Rule_Description ?Message ?s ?p ?o
WHERE {
  ?s a dcat:Catalog.
  ?s dct:publisher ?o.
  FILTER(!isURI(?o)).
  BIND ("DCAT-AP" AS ?Rule_Origin).
  BIND (10 AS ?Rule_ID).
  BIND ("error" AS ?Rule_Severity).
  BIND ("dct:publisher should be a resource." AS ?Rule_Description).
  BIND (concat("The dcat:Catalog ",str(?s)," should have the dct:publisher as rdf:resource.") AS ?Message).
}