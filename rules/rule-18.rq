# Rule_ID:18
# @title [Catalog] dct:language is a recommended property for Catalog
# @tag catalog
# @endpoint http://localhost:3030/dcat-ap_validator/query

PREFIX dcat: <http://www.w3.org/ns/dcat#>
PREFIX dct: <http://purl.org/dc/terms/>

SELECT ?Rule_Origin ?Rule_ID ?Rule_Severity ?Rule_Description ?Message ?s ?p ?o
WHERE {
  ?s a dcat:Catalog.
  FILTER(!EXISTS {?s dct:language ?o.}).
  BIND (dct:language AS ?p).
  BIND ("DCAT-AP" AS ?Rule_Origin).
  BIND (18 AS ?Rule_ID).
  BIND ("warning" AS ?Rule_Severity).
  BIND ("dct:language is a recommended property for Catalog." AS ?Rule_Description).
  BIND (concat("The dct:language ",str(?o)," is not a property of Catalog.") AS ?Message).
}
