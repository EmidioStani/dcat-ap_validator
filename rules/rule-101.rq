# Rule_ID:101
# @title [Dataset] dct:creator should be a foaf:Agent
# @tag dataset
# @endpoint http://localhost:3030/dcat-ap_validator/query

PREFIX dcat: <http://www.w3.org/ns/dcat#>
PREFIX dct: <http://purl.org/dc/terms/>
PREFIX foaf: <http://xmlns.com/foaf/0.1/>

SELECT ?Rule_Origin ?Rule_ID ?Rule_Severity ?Rule_Description ?Message ?s (dct:creator as ?p) ?o 
WHERE {
  ?s a dcat:Dataset.
  ?s dct:creator ?o.
  ?o ?pred ?val.
  FILTER(!EXISTS {?o a foaf:Agent}).
  BIND ("DCAT-AP" AS ?Rule_Origin).
  BIND (101 AS ?Rule_ID).
  BIND ("error" AS ?Rule_Severity).
  BIND ("dct:creator should be a foaf:Agent." AS ?Rule_Description).
  BIND (concat("The dct:creator ",str(?o)," is not a foaf:Agent.") AS ?Message).
}
