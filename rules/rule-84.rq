# Rule_ID:84
# @title [Distribution] dct:format should be a resource
# @tag distribution
# @endpoint http://localhost:3030/dcat-ap_validator/query

PREFIX dcat: <http://www.w3.org/ns/dcat#>
PREFIX dct: <http://purl.org/dc/terms/>

SELECT ?Class_Name ?Rule_ID ?Rule_Severity ?Rule_Description ?Message ?s ?p ?o 
WHERE {
  ?s a dcat:Distribution.
  ?s dct:format ?o.
  FILTER(!isURI(?o)).
  BIND (dct:format AS ?p).
  BIND ("Distribution" AS ?Class_Name).
  BIND (84 AS ?Rule_ID).
  BIND ("error" AS ?Rule_Severity).
  BIND ("dct:format should be a resource." AS ?Rule_Description).
  BIND (concat("The dct:format ",str(?s)," is not a resource.") AS ?Message).
}
