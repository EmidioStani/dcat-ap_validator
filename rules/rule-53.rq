# Rule_ID:53
# @title [Dataset] dcat:theme is a recommended property for Dataset
# @tag dataset
# @endpoint http://localhost:3030/dcat-ap_validator/query

PREFIX dcat: <http://www.w3.org/ns/dcat#>
PREFIX dct: <http://purl.org/dc/terms/>

SELECT ?Rule_Origin ?Rule_ID ?Rule_Severity ?Rule_Description ?Message ?s ?p ?o 
WHERE {
  ?s a dcat:Dataset.
  FILTER(!(EXISTS { ?s dcat:theme ?theme})).
  BIND (rdf:type AS ?p).
  BIND (dcat:Dataset AS ?o).
  BIND ("DCAT-AP" AS ?Rule_Origin).
  BIND (53 AS ?Rule_ID).
  BIND ("error" AS ?Rule_Severity).
  BIND ("dcat:theme is a recommended property for Dataset." AS ?Rule_Description).
  BIND (concat("The dcat:Dataset ",str(?o)," does not have a dcat:theme property.") AS ?Message).
}

